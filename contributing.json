// https://gitmagic.io/rules
{
  "commit": {
    "subject_cannot_be_empty": true,
    "subject_must_be_longer_than": 3,
    "subject_must_be_shorter_than": 101,
    "subject_lines_must_be_shorter_than": 101,
    "subject_must_be_single_line": true,
    "subject_must_be_in_tense": "past",
    "subject_must_start_with_case": "upper",
    "subject_must_end_with_dot": true,
    "subject_must_close_github_issue": false,
    "subject_must_include_github_issue": true,
    // Body is the rest of the commit message after the first paragraph,
    // separated by a blank line.
    "body_cannot_be_empty": false,
    "body_lines_must_be_shorter_than": 73,
    "body_must_close_github_issue": false,
    "body_must_include_github_issue": false
  },

  "pull_request": {
    "subject_cannot_be_empty": true,
    "subject_must_be_longer_than": 3,
    "subject_must_be_shorter_than": 101,
    "subject_must_be_in_tense": "past",
    "subject_must_start_with_case": "upper",
    "subject_must_not_end_with_dot": true,
    "subject_must_include_github_issue": false,

    "body_cannot_be_empty": true,
    "body_must_include_verification_steps": false,
    "body_must_close_github_issue": false,
    "body_must_include_github_issue": false
  },

  "issue": {
    "subject_cannot_be_empty": true,
    "subject_must_be_longer_than": 3,
    "subject_must_be_shorter_than": 101,
    "subject_must_be_in_tense": "imperative",
    "subject_must_start_with_case": "upper",
    "subject_must_not_end_with_dot": true,
    "body_cannot_be_empty": true,
    "body_must_include_reproduction_steps": ["bug"],
    "label_must_be_set": true
  },
  "branch": {
    "name_must_be_longer_than": 3,
    "name_must_be_shorter_than": 127,
    "name_must_include_github_issue": false
  }
}
